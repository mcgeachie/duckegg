<div class="container">
    <form method="post" action="/send">
        <input type="text" name="user[name]" placeholder="Your Name">
        <input type="text" name="user[email]" placeholder="Your Email">
        <input type="text" name="user[text]" placeholder="Your Story...">
        <input type="file" name="user[picture]" accepts="image/*">
        <div id="captchaHolder">
            {{{ captcha }}}
        </div>
        <input type="submit" value="Submit">
    </form>
</div>

